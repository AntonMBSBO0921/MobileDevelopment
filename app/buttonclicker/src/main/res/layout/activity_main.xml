<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/itIsNotMe"
        android:layout_width="119dp"
        android:layout_height="53dp"
        android:onClick="oclItIsNotMe"
        android:text="It's not me"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewStudent"
        tools:layout_editor_absoluteY="413dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnWhoAmI"
        android:layout_width="119dp"
        android:layout_height="53dp"
        android:text="Who am i?"
        app:layout_constraintEnd_toStartOf="@+id/textViewStudent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="413dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/acceptBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Подтвердить"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="528dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>